@model  List<Common.Model.SearchShool>
@foreach (var item in Model)
{
    <div class="col-sm-4 item-schoolar">
        <div class="item-truonghoc">
            <div class="images-item">
                <div class="logo">
                    <img width="26" height="44" src="@Web.Topcourse.Helper.Utils.DomainMedia@item.School.Logo" class="v3hocbong_logo" alt="" />
                </div>
                <div class="images-bottom h-150">
                    <div class="images-cover">
                        <a href="@Html.Raw(Web.Topcourse.Helper.Utils.Domain)chi-tiet-truong/@item.School.Alias-@item.School.EduId"><img width="380" height="290" src="@Web.Topcourse.Helper.Utils.DomainMedia@item.School.Avatar" class="v3hocbong_thumb wp-post-image" alt=""></a>
                    </div>
                </div>
            </div>
            <div class="right-item">
                <h4>@item.School.EduName</h4>
                <div class="info-bottom">
                    <address>@item.School.EduAddress</address>
                    <hr>
                    <p>Chương trình đào tạo:</p>
                    <div class="info-item clearfix">

                        @if (item.Courses != null && item.Courses.Any())
                        {
                            <ul class="list-unstyle">
                                @foreach (var course in item.Courses)
                                {
                                    <li><a href="@Html.Raw(Web.Topcourse.Helper.Utils.Domain)khoa-hoc/@course.Alias-@course.CoursesID" title="@course.Title">@course.Title</a></li>
                                }
                            </ul>
                        }
						<div style="float:right; color:#89ce33; ">
							<p style="font-style: italic;">...Xem thêm</p>
						</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<input type="hidden" id="total_record" value="@ViewBag.TotalRecord" />
