@model Common.Model.Post
@{
    ViewBag.Title =Model.Title;
    ViewBag.MetaDescription = Model.MetaDescription;
    ViewBag.MetaKeyWord = Model.MetaKeyword;
    ViewBag.Url = string.Concat(Html.Raw(Web.Topcourse.Helper.Utils.Domain), "bai-viet/", Model.Alias, "-", Model.PostID);
    ViewBag.Image = Model.ThumbailImage;
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var listPost = (List<Common.Model.Post>)ViewBag.Related;
}

