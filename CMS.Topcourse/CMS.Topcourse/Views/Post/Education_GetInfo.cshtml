            alwaysShow: true,
            threshold: 5
        });

        $("#fileupload").validate({
            // define validation rules
            rules: {
                EduName: {
                    required: true
                },
                ShortName: {
                    required: true
                },
                Alias: {
                    required: true
                },
                Avatar: {
                    required: true
                },
                Logo: {
                    required: true
                },
                EduAddress: {
                    required: true
                },
                BranchInfo: {
                    required: true
                }
            },

            messages: {
