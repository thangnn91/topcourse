                    html += '<img src="@Html.Raw(Web.Topcourse.Helper.Utils.Domain)Content/images/rating_on.png" alt="1 vote, average: 5,00 out of 5" class="post-ratings-image">';
                }
                html += '</span></li></ul>';
                html += '<div class="v1_ctdtao_line"></div><ul class="v1_ctdtao_price"><li class="">Học phí ưu đãi: <span>' + utils.formatMoney(item.TuitionIncentives) + '</span></li></ul>';
                html += '<div class="v1_ctdtao_more"><a href="@Html.Raw(Web.Topcourse.Helper.Utils.Domain)khoa-hoc/' + item.Alias + '-' + item.CoursesID + '">XEM CHI TIẾT</a>';
                html += '</div></div>';
            }
            $('#slider-lastview').html(html);
            $('#slider-lastview').owlCarousel({
                loop: _logViews.length >2 ? true: false,
                margin: 30,
                nav: true,
                navText: ['<span class="icon-arrow-left"></span>', '<span class="icon-arrow-right"></span>'],
                dot: false,
                autoplay: true,
                autoplayTimeout: 5000,
                responsive: {
                    0: {
                        items: 3
                    },
                    600: {
                        items: 3
                    },
                    1000: {
                        items: 3
                    }
                }
            });
        }
        setTimeout(function () {
            if (!isSaveLog) {
                    var logCourseView = {
                    CoursesID: '@Model.CoursesID',
                    Title: '@Html.Raw(Model.Title)',
                    Alias: '@Model.Alias',
                    EducationName: '@Html.Raw(Model.EducationName)',
                    ViewCount: '@Model.ViewCount',
                    NumRate: '@Model.NumRate',
                    TuitionIncentives: '@Model.TuitionIncentives',
                    Tuition: '@Model.Tuition',
                    StudyFormDesc: '@Html.Raw(Model.StudyFormDesc)',
                    Accreditation: '@Html.Raw(Model.Accreditation)',
                    ImageUrl: '@Model.ImageUrl',
                    CourseType: @Model.CourseType,
                    StudyDuration: '@Html.Raw(Model.StudyDuration)',
                    RequireAdmissionDesc: '@Html.Raw(Model.RequireAdmissionDesc)',
                    EduId:'@Model.EduId'
                };

                setItemInStorage('_courseView2', logCourseView);
                isSaveLog = true;
            }
        }, 5000);

        $('#course_tab_content .bootstrap-tabs li, #course_tab_content .tab-content .tab-pane').removeClass('active');
        $('#course_tab_content .bootstrap-tabs li:first-child, #course_tab_content .tab-content .tab-pane:first').addClass('active');

