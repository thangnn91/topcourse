        var listResource = ['common.errorcode'];
        var currentLang = utils.getCurrentLanguage();
        i18n.init({
            fallbackLng:'vi',
            lng: currentLang,
            resGetPath: "@Html.Raw(Web.Topcourse.Helper.Utils.Domain)locales/__lng__/__ns__.json",
