            //filebrowserWindowWidth: '500px',
            //filebrowserWindowHeight: '300px',
            //uiColor: '#77C0F1'
        });

        CKEDITOR.replace('txt_ContactInfo', {
            extraPlugins: 'bootstrapTabs',
