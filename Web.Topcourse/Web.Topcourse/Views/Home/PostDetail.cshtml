            <div class="col-md-12 txtCenter">
                <main id="main" class="site-main" role="main">
                    <div class="box-all">
                        <h2 class="title-line bg-center color-black">@Model.Title</h2>
                        <div class="datepost txtCenter">@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="recap width-80">
                        <strong>
                            <div style="padding:8px 0px; text-align:justify">@Html.Raw(Model.Description)</div>
                        </strong>
                    </div>
                    <div class="recap  width-80 txtLeft">
                        @Html.Raw(Model.Content)
